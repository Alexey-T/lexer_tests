import ballerina/grpc;
import ballerina/io;

// Client endpoint configuration
HelloWorldBlockingClient helloWorldBlockingEp = new ("http://localhost:9110");
const string ERROR_MSG_FORMAT = "Error from Connector: %s - %s";

